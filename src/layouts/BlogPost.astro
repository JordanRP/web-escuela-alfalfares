---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import SliderBlog from '../components/SliderBlog.astro';

interface Props extends CollectionEntry<'blog'>['data'] {
  sliderImages?: string[];
}

const { title, description, pubDate, updatedDate, heroImage, sliderImages } = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
		font-size: small;
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      /* Estilos dinámicos */
	.img-vertical {
	max-height: 400px;   /* más chicas en móvil/entrada */
	max-width: 70%;
	width: auto;
	object-fit: contain;
	margin: 0 auto;
	display: block;
	}

	.img-horizontal {
	width: 100%;
	height: auto;
	max-height: 500px;
	object-fit: cover;
	}

	/* Tablet */
	@media (min-width: 768px) {
	.img-vertical {
		max-height: 450px;
		max-width: 45%;   /* bastante más reducidas */
	}
	}

	/* Escritorio */
	@media (min-width: 1024px) {
	.img-vertical {
		max-height: 600px;
		max-width: 40%;   /* mucho más angostas */
	}
	}

    </style>


  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image relative w-full max-w-5xl mx-auto">
          {sliderImages && sliderImages.length > 0 ? (
            <SliderBlog images={sliderImages} />
          ) : (
            heroImage && (
              <img
                src={heroImage}
                alt={title}
                class="blog-image rounded-xl shadow-lg mx-auto transition-all"
              />
            )
          )}
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {updatedDate && (
                <div class="last-updated-on">
                  Actualizado por última vez <FormattedDate date={updatedDate} />
                </div>
              )}
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>

  <script>
		document.addEventListener("DOMContentLoaded", () => {
			document.querySelectorAll(".blog-image").forEach(img => {
			if (img.naturalWidth > img.naturalHeight) {
				img.classList.add("img-horizontal");
			} else {
				img.classList.add("img-vertical");
			}
			});
		});
  </script>
</html>
